@page
@model TGL.WebAppTeamSeguros.Pages.Vehicles.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<nav>
    <div class="nav-wrapper bg-dark">
        <a class="brand-logo center">List of Vehicles</a>
    </div>
</nav>

<br />
<br />
<form method="post">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Owner               </th>
                <th scope="col">Brand               </th>
                <th scope="col">Model               </th>
                <th scope="col">Year                </th>
                <th scope="col">Cost Insecure       </th>
                <th scope="col">DateExp Insecure    </th>
                <th scope="col">DueDate Insecure    </th>
                <th scope="col">Acciones            </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model.Vehicles)
            {
                <tr>
                    <td> Models.Customer.Name   Models.Customer.LastName      </td>
                    <td>@vehicle.Brand        </td>
                    <td>@vehicle.Model        </td>
                    <td>@vehicle.Year      </td>
                    <td> Models.Insurance.Increase</td>
                    <td> Models.Insurance.DateExp</td>
                    <td> Models.Insurance.DueDate</td>
                    <td>
                        <button class="btn btn-outline-danger" type="submit"
                                asp-page-handler="delete"
                                asp-route-id="@vehicle.Id">
                            Delete
                        </button>
                    </td>
                </tr>
            }


        </tbody>

    </table>
</form>
